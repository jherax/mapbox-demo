    "countries-list": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "mapbox-gl": "^2.15.0",
    "mapbox-gl-style-switcher": "^1.0.11",
