    "@types/jest": "^29.5.11",
    "@types/mapbox-gl": "^2.7.19",
    "@types/node": "^20.10.5",
    "@types/styled-components": "^5.1.34",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "showdown": "^2.1.0",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2"
  },
  "optionalDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  },
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "test": "react-scripts test --watchAll",
    "test:be": "jest -c=backend/setup/jest.config.js --detectOpenHandles",
    "test:staged:be": "cross-env CI=true jest -c=backend/setup/jest.config.js --bail --findRelatedTests",
    "test:staged:fe": "cross-env CI=true react-scripts test --env=jsdom --bail --findRelatedTests",
    "gendocs": "node scripts/md2html.js",
    "lint": "eslint src --fix",
    "clean:server": "rimraf backend/dist",
    "tscfg:server": "npm run build:server -- --showConfig",
    "build:server": "tsc -p backend/setup/tsconfig.build.json",
    "dev:server": "concurrently -k \"npm:build:server -- -w\" \"nodemon --dns-result-order=ipv4first --trace-warnings backend/dist/index.js\""
  },
  "lint-staged": {
    "{backend,scripts}/**/!(*.d).ts": [
      "npm run test:staged:be"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run test:staged:fe"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
